{
  "tsserver.enable": true,
  "tsserver.log": "verbose",
  // "tailwindCSS.includeLanguages": {
  //   "rust": "html"
  // },
  "Lua.workspace.library": [
    "/usr/share/nvim/runtime/lua"
  ],
  "inlayHint.enable": true,
  "workspace.rootPatterns": [
    ".git",
    ".hg",
    ".projections.json",
    "Cargo.toml",
    "uno.config.ts",
    "uno.config.js",
    "tailwind.config.js",
    "tailwind.config.cjs",
    "tailwind.config.ts"
  ],
  "languageserver": {
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "initializationOptions": {
        "inlayHints": {
          "typeHints": {
            "enable": true
          },
          "maxLength": 5,
          "parameterHints": {
            "enable": false
          },
          "chainingHints": {
            "enable": true
          },
          "closingBraceHints": {
            "enable": true
          }
        }
      }
    },
    "hyprlang": {
      "command": "hyprls",
      "filetypes": ["hyprlang"]
    },
    "wgsl": {
      "command": "wgsl_analyzer",
      "filetypes": ["wgsl"]
    },
    "typst": {
      "command": "tinymist lsp",
      "filetypes": ["typst"]
    }
  }
}
