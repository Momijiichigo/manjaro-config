(defwidget circ-prog [value class thickness]

  (transform
    :rotate 75
    :translate-x "-100%"
    :translate-y "0%"
    (circular-progress
      :value value
      :class class
      :thickness thickness
      (transform
        :rotate 25
        :translate-x "0%"
        :translate-y "-100%"
        (children)
      )
    )
  )
)
