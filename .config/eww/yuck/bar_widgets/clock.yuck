
(defwidget clock_module []
  (eventbox
    :onhover "$HOME/.config/eww/scripts/pop calendar"
    (box
      :class "module"
      :space-evenly "false"
      :orientation "h"
      :spacing "3" 
      (label
        :text {formattime(EWW_TIME, "\%I")}
        :class "clock_hour_class"
      )
      (label :text "ï›˜" :class "clock_time_sep" )
      (label
        :text {formattime(EWW_TIME, "\%M")}
        :class "clock_minute_class"
      )
    )
  )
)
  

